#!/bin/bash

# Local deployment script - pushes to git and triggers server deployment
# Usage: ./deploy [commit message]

set -e

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${BLUE}ğŸš€ Starting deployment...${NC}"

# Check if git is initialized
if [ ! -d ".git" ]; then
    echo -e "${YELLOW}âš ï¸  Git not initialized. Initializing...${NC}"
    git init
    git remote add origin git@github.com:Redher012/autoViteDeployer.git 2>/dev/null || true
fi

# Check for uncommitted changes
if [ -n "$(git status --porcelain)" ]; then
    echo -e "${BLUE}ğŸ“ Staging changes...${NC}"
    git add .
    
    # Use provided commit message or default
    COMMIT_MSG="${1:-Deploy: $(date +'%Y-%m-%d %H:%M:%S')}"
    echo -e "${BLUE}ğŸ’¾ Committing: ${COMMIT_MSG}${NC}"
    git commit -m "$COMMIT_MSG"
else
    echo -e "${YELLOW}â„¹ï¸  No changes to commit${NC}"
fi

# Push to remote
echo -e "${BLUE}ğŸ“¤ Pushing to GitHub...${NC}"
git push origin main || git push origin master

echo -e "${GREEN}âœ… Code pushed to GitHub!${NC}"
echo -e "${BLUE}ğŸ“‹ Next steps:${NC}"
echo -e "   1. SSH into your server"
echo -e "   2. cd /var/www/autoViteDeployer"
echo -e "   3. Run: ./deploy.sh"
echo ""
echo -e "${YELLOW}ğŸ’¡ Tip: You can automate this by adding SSH key-based authentication${NC}"
